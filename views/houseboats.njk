{% extends "layouts/base.njk" %}

{% block title %}Home - Kerala Houseboats{% endblock %}

{% block content %}

<h1>Houseboats</h1>

<form method="POST" action="/houseboats/add" class="add-form">
  <input name="name" placeholder="Houseboat Name" required>
  <input name="description" placeholder="Description" required>
  <input name="price" placeholder="Price (in â‚¹)" required>
  <button type="submit">Add Houseboat</button>
</form>


<table class="data-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {% for boat in houseboats %}
      <tr>
        <form method="POST" action="/houseboats/edit/{{ boat.id }}">
          <td><input name="name" value="{{ boat.name }}"></td>
          <td><input name="description" value="{{ boat.description }}"></td>
          <td><input name="price" value="{{ boat.price }}"></td>
          <td><button class="btn-update" type="submit">Update</button></td>
        </form>
        <form method="POST" action="/houseboats/delete/{{ boat.id }}">
          <td>
            <button class="btn-delete" type="submit" onclick="return confirm('Delete this houseboat?')">Delete</button>
          </td>
        </form>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
